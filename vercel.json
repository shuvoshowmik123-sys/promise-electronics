{
    "version": 2,
    "crons": [
        {
            "path": "/api/ai/morning-brief",
            "schedule": "0 3 * * *"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "buildCommand": "npm run build",
    "outputDirectory": "dist/public",
    "framework": "vite"
}